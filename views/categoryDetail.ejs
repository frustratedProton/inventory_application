<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= category.name %></title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                display: flex;
            }
            .main-content {
                flex: 1;
                padding: 20px;
            }
            .header {
                margin-bottom: 20px;
                text-align: center;
            }
            .container {
                display: flex;
                flex-wrap: wrap;
                gap: 20px;
                justify-content: center;
                max-width: 1200px;
                margin: 0 auto;
            }
            .card {
                background: #fff;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                width: 300px;
                padding: 20px;
                box-sizing: border-box;
                transition: transform 0.3s ease;
                text-decoration: none;
                color: inherit;
            }
            .card:hover {
                transform: scale(1.05);
            }
            .card h2 {
                margin-top: 0;
                font-size: 1.5em;
                color: #333;
            }
            .card p {
                margin: 10px 0;
                color: #666;
            }
            .card .date {
                font-size: 0.9em;
                color: #999;
            }
            .header .actions {
                margin-top: 20px;
                text-align: center;
            }
            .header .actions a {
                display: inline-block;
                padding: 10px 20px;
                font-size: 1em;
                color: #fff;
                border-radius: 5px;
                text-decoration: none;
                margin: 0 10px;
            }
            .header .actions .edit {
                background-color: #007bff;
            }
            .header .actions .edit:hover {
                background-color: #0056b3;
            }
            .header .actions .delete {
                background-color: #dc3545;
            }
            .header .actions .delete:hover {
                background-color: #c82333;
            }
            /* Modal styles */
            .modal {
                display: none;
                position: fixed;
                z-index: 1000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
                background-color: rgba(0, 0, 0, 0.4);
            }
            .modal-content {
                background-color: #fefefe;
                margin: 15% auto;
                padding: 20px;
                border: 1px solid #888;
                width: 80%;
                max-width: 400px;
                border-radius: 8px;
                text-align: center;
            }
            .modal-header {
                padding: 10px 0;
                border-bottom: 1px solid #eee;
            }
            .modal-body {
                padding: 20px 0;
            }
            .modal-footer {
                padding: 10px 0;
                border-top: 1px solid #eee;
            }
            .modal-footer button {
                padding: 10px 20px;
                font-size: 1em;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                margin: 0 5px;
            }
            .modal-footer .cancel {
                background-color: #6c757d;
                color: #fff;
            }
            .modal-footer .confirm {
                background-color: #dc3545;
                color: #fff;
            }
        </style>
    </head>
    <body>
        <%- include('partials/sidebar') %>
        <div class="main-content">
            <div class="header">
                <h1><%= category.name %></h1>
                <p><%= category.description %></p>
                <p class="date">
                    <strong>Created:</strong> <%= category.created_at %>
                </p>
                <p class="date">
                    <strong>Updated:</strong> <%= category.updated_at %>
                </p>
                <div class="actions">
                    <a href="/categories/<%= category.id %>/edit" class="edit"
                        >Edit</a
                    >
                    <a href="#" class="delete" id="deleteButton">Delete</a>
                </div>
            </div>

            <div class="container">
                <% items.forEach(item => { %>
                <a href="/items/<%= item.id %>" class="card">
                    <h2><%= item.name %></h2>
                </a>
                <% }); %>
            </div>

            <!-- Modal -->
            <div id="deleteModal" class="modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2>Confirm Deletion</h2>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this category?</p>
                    </div>
                    <div class="modal-footer">
                        <button class="cancel" id="cancelButton">Cancel</button>
                        <button class="confirm" id="confirmButton">
                            Delete
                        </button>
                    </div>
                </div>
            </div>

            <!-- Hidden delete form -->
            <form
                id="deleteForm"
                action="/categories/<%= category.id %>/delete"
                method="post"
                style="display: none"
            >
                <button type="submit" id="submitDeleteButton">Delete</button>
            </form>
        </div>

        <script>
            const modal = document.getElementById('deleteModal');
            const deleteButton = document.getElementById('deleteButton');
            const cancelButton = document.getElementById('cancelButton');
            const confirmButton = document.getElementById('confirmButton');

            deleteButton.addEventListener('click', (event) => {
                event.preventDefault();
                modal.style.display = 'block';
            });

            cancelButton.addEventListener('click', () => {
                modal.style.display = 'none';
            });

            confirmButton.addEventListener('click', () => {
                document.getElementById('deleteForm').submit();
            });

            window.addEventListener('click', (event) => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });
        </script>
    </body>
</html>
