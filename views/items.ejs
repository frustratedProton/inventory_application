<!DOCTYPE html>
<html>
	<head>
		<title>Items</title>
		<style>
			body {
				font-family: Arial, sans-serif;
				margin: 0;
				display: flex;
			}
			.main-content {
				flex: 1;
				padding: 20px;
			}
			.container {
				display: flex;
				flex-wrap: wrap;
				gap: 20px;
				justify-content: center;
				max-width: 1200px;
			}
			.card {
				background: #fff;
				border-radius: 8px;
				box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
				width: 300px;
				padding: 20px;
				box-sizing: border-box;
				transition: transform 0.3s ease;
				text-decoration: none;
				color: inherit;
			}
			.card:hover {
				transform: scale(1.05);
			}
			.card h2 {
				margin-top: 0;
				font-size: 1.5em;
				color: #333;
			}
			.card p {
				margin: 10px 0;
				color: #666;
			}
			.card .date {
				font-size: 0.9em;
				color: #999;
			}
			.add-item-link {
				display: block;
				margin-bottom: 20px;
				text-align: center;
			}
			.add-item-link a {
				display: inline-block;
				padding: 10px 20px;
				font-size: 1em;
				color: #fff;
				background-color: #007bff;
				border-radius: 5px;
				text-decoration: none;
				transition: background-color 0.3s ease;
			}
			.add-item-link a:hover {
				background-color: #0056b3;
			}
		</style>
	</head>
	<body>
		<%- include('partials/sidebar') %>
		<div class="main-content">
			<h1>Items</h1>
			<div class="add-item-link">
				<a href="/items/new">Add Item</a>
			</div>
			<div class="container">
				<% items.forEach(item => { %>
				<a href="/items/<%= item.id %>" class="card">
					<h2><%= item.name %></h2>
				</a>
				<% }); %>
			</div>
		</div>
	</body>
</html>
