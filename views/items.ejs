<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Items List</title>
	</head>
	<body>
		<h1>Items List</h1>

		<!-- Include the sidebar partial -->
		<%- include('categorySidebar') %>

		<h2>Items</h2>
		<ul>
			<% items.forEach(item => { %>
			<li>
				<a href="/items/<%= item.id %>"><%= item.name %></a> - <%=
				item.description %>
			</li>
			<% }) %>
		</ul>
	</body>
</html>
