<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Items</title>
        <link rel="stylesheet" href="/styles.css" />
    </head>
    <body>
        <%- include('partials/sidebar') %>
        <div class="main-content">
            <h1>Items</h1>
            <div class="container">
                <% items.forEach(item => { %>
                <a href="/items/<%= item.id %>" class="card">
                    <h2><%= item.name %></h2>
                </a>
                <% }); %>
            </div>
            <div class="add-item-link">
                <a href="/items/new">Add Item</a>
            </div>
        </div>
    </body>
</html>
