<!DOCTYPE html>
<html>
    <head>
        <title><%= category.name %> - Update</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                display: flex;
            }
            .main-content {
                flex: 1;
                padding: 20px;
            }
            .card {
                background: #fff;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                padding: 20px;
                box-sizing: border-box;
                max-width: 600px;
                margin: 0 auto;
            }
            .card h1 {
                margin-top: 0;
                font-size: 2em;
                color: #333;
            }
            .form-group {
                margin-bottom: 15px;
            }
            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }
            .form-group input,
            .form-group textarea {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }
            .form-actions {
                text-align: center;
            }
            .form-actions button {
                padding: 10px 20px;
                font-size: 1em;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                margin: 0 5px;
            }
            .form-actions .submit {
                background-color: #007bff;
                color: #fff;
            }
            .form-actions .submit:hover {
                background-color: #0056b3;
            }
            .form-actions .cancel {
                background-color: #6c757d;
                color: #fff;
            }
            .form-actions .cancel:hover {
                background-color: #5a6268;
            }
        </style>
    </head>
    <body>
        <%- include('partials/sidebar') %>
        <div class="main-content">
            <div class="card">
                <h1>Update Category: <%= category.name %></h1>
                <form
                    action="/categories/<%= category.id %>"
                    method="post"
                >
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            value="<%= category.name %>"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="description" name="description" required>
                        <%= category.description.trim().replace(/</g, '&lt;').replace(/>/g, '&gt;') %>
                    </textarea
                        >
                    </div>
                    <div class="form-group">
                        <label for="type">Type</label>
                        <input
                            type="text"
                            id="type"
                            name="type"
                            value="<%= category.type %>"
                            required
                        />
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="submit">
                            Update Category
                        </button>
                        <a href="/categories/<%= category.id %>" class="cancel">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
