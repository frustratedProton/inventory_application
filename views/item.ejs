<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= item.name %> - Details</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                display: flex;
            }
            .main-content {
                flex: 1;
                padding: 20px;
            }
            .card {
                background: #fff;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                padding: 20px;
                box-sizing: border-box;
                max-width: 600px;
                margin: 0 auto;
            }
            .card h1 {
                margin-top: 0;
                font-size: 2em;
                color: #333;
            }
            .card p {
                margin: 10px 0;
                color: #666;
            }
            .card .date {
                font-size: 0.9em;
                color: #999;
            }
            .card .actions {
                margin-top: 20px;
                text-align: center;
            }
            .card .actions a,
            .card .actions button {
                display: inline-block;
                padding: 10px 20px;
                font-size: 1em;
                color: #fff;
                border-radius: 5px;
                text-decoration: none;
                margin: 0 10px;
                border: none;
                cursor: pointer;
            }
            .card .actions .edit {
                background-color: #007bff;
            }
            .card .actions .edit:hover {
                background-color: #0056b3;
            }
            .card .actions .delete {
                background-color: #dc3545;
            }
            .card .actions .delete:hover {
                background-color: #c82333;
            }

            /* Modal styles */
            .modal {
                display: none;
                position: fixed;
                z-index: 1000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
                background-color: rgba(0, 0, 0, 0.4);
            }
            .modal-content {
                background-color: #fefefe;
                margin: 15% auto;
                padding: 20px;
                border: 1px solid #888;
                width: 80%;
                max-width: 400px;
                border-radius: 8px;
                text-align: center;
            }
            .modal-header {
                padding: 10px 0;
                border-bottom: 1px solid #eee;
            }
            .modal-body {
                padding: 20px 0;
            }
            .modal-footer {
                padding: 10px 0;
                border-top: 1px solid #eee;
            }
            .modal-footer button {
                padding: 10px 20px;
                font-size: 1em;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                margin: 0 5px;
            }
            .modal-footer .cancel {
                background-color: #6c757d;
                color: #fff;
            }
            .modal-footer .confirm {
                background-color: #dc3545;
                color: #fff;
            }
        </style>
    </head>
    <body>
        <%- include('partials/sidebar') %>

        <div class="main-content">
            <div class="card">
                <h1><%= item.name %></h1>
                <p><strong>Description:</strong> <%= item.description %></p>
                <p><strong>Quantity:</strong> <%= item.quantity %></p>
                <p class="date">
                    <strong>Created:</strong> <%= item.created_at %>
                </p>
                <p class="date">
                    <strong>Updated:</strong> <%= item.updated_at %>
                </p>
                <div class="actions">
                    <a href="/items/<%= item.id %>/edit" class="edit">Edit</a>
                    <form
                        id="deleteForm"
                        action="/items/<%= item.id %>/delete"
                        method="POST"
                        style="display: inline"
                    >
                        <button type="button" class="delete" id="deleteButton">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div id="deleteModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Confirm Deletion</h2>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this item?</p>
                </div>
                <div class="modal-footer">
                    <button class="cancel" id="cancelButton">Cancel</button>
                    <button class="confirm" id="confirmButton">Delete</button>
                </div>
            </div>
        </div>

        <script>
            // Modal elements
            const modal = document.getElementById('deleteModal');
            const deleteButton = document.getElementById('deleteButton');
            const cancelButton = document.getElementById('cancelButton');
            const confirmButton = document.getElementById('confirmButton');
            const deleteForm = document.getElementById('deleteForm');

            deleteButton.addEventListener('click', (event) => {
                event.preventDefault(); // Prevent default button behavior
                modal.style.display = 'block';
            });

            cancelButton.addEventListener('click', () => {
                modal.style.display = 'none';
            });

            confirmButton.addEventListener('click', () => {
                deleteForm.submit(); // Submit the form to delete the item
            });

            window.addEventListener('click', (event) => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });
        </script>
    </body>
</html>
